{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Export Doctor",
  "version": "1.0.0",
  "identifier": "com.exportdoctor.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Export Doctor",
        "width": 960,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 640,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app",
      "msi",
      "nsis",
      "deb",
      "appimage"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "ffprobe"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBRjg4RDlGMEM1QzU1RUEKUldUcVZWd01uNDM0Nml4a0FzN0VJRitwNE5MWUJHajRQcXpHZ1g5N1hueEVaQW5vYVVDbjIrUXYK",
      "endpoints": [
        "https://github.com/mertulgut/exportdoctor/releases/latest/download/latest.json"
      ]
    }
  }
}